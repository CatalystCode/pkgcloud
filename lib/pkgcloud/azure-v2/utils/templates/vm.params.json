{
  "location": "<%= LOCATION %>",
  "properties": {
    "hardwareProfile": {
      "vmSize": "<%= VM_SIZE %>"
    },
    "osProfile": {
      "computerName": "<%= VM_NAME %>",
      "adminUsername": "<%= USERNAME %>",
      "adminPassword": "<%= PASSWORD %>"
    },
    "storageProfile": {
      "imageReference": {
        "publisher": "Canonical",
        "offer": "UbuntuServer",
        "sku": "16.04.0-LTS",
        "version": "latest"
      },
      "osDisk": {
        "name": "osdisk",
        "vhd": {
          "uri": "<%= OS_DISK_URI %>"
        },
        "caching": "ReadWrite",
        "createOption": "FromImage"
      }
    },
    "networkProfile": {
      "networkInterfaces": [
        {
          "id": "<%= NICK_ID %>",
          "primary": true
        }
      ]
    }
  }
}